{
  "env": {
    "amd": true,
    "browser": false,
    "mocha": false,
    "node": true
  },
  "globals": {
    "Promise": false
  },
  "extends": "standard",
  "rules": {
    /* Possible Errors */
    "no-extra-parens": 2,
    "no-reserved-keys": 2,
    "valid-jsdoc": 2,
    /* Best Practices */
    "block-scoped-var": 2,
    "complexity": [1, 3],
    "default-case": 2,
    "dot-notation": [2, { "allowKeywords": false }],
    "guard-for-in": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-param-reassign": 2,
    "no-process-env": 2,
    "no-void": 2,
    "no-warning-comments": 2,
    "vars-on-top": 2,
    /* Strict Mode */
    "strict": 2,
    /* Variables */
    "no-catch-shadow": 2,
    "no-undefined": 2,
    /* Node.JS */
    "no-sync": 2,
    /* Semi-Standard */
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "semi-spacing": [2, { "before": false, "after": true }]
  }
}
